{
  "name": "nest-nestia-microservice-boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/SonderRill/Nest-nestia-microservice-boilerplate"
  },
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "nest build",
    "build:swagger": "npx nestia swagger",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/bin/single",
    "start:prod:cluster": "node dist/src/bin/cluster",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:dev:create": "prisma migrate dev --create-only",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:down": "prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-schema-datasource prisma/schema.prisma --script > down.sql",
    "prepare": "ts-patch install && typia patch && husky",
    "bench:get": "h2load --h1 -n 300000 -c 50 -m 30 \"http://localhost:7000/?text=123&num=0\"",
    "bench:post": "h2load --h1 -n 300000 -c 50 -m 30 -d test/bench.body.json -H 'Content-Type: application/json' \"http://localhost:7000/\"",
    "bench:get:cluster": "h2load --h1 -n 5000000 -c 50 -m 30 -t 5 \"http://localhost:7000/?text=123&num=0\"",
    "bench:post:cluster": "h2load --h1 -n 5000000 -c 50 -m 30 -t 5 -d test/bench.body.json -H 'Content-Type: application/json' \"http://localhost:7000/\"",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@nestia/core": "^4.5.2",
    "@nestia/e2e": "^0.7.0",
    "@nestia/fetcher": "^4.5.2",
    "@nestia/sdk": "^4.5.2",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/client": "^6.2.1",
    "fastify-metrics": "^12.1.0",
    "joi": "^17.13.3",
    "pino-loki": "^2.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-patch": "^3.3.0",
    "typia": "^7.5.1"
  },
  "devDependencies": {
    "@nestia/benchmark": "^0.3.0",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nestia": "^6.3.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}